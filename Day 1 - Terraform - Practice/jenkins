node {
    // Use the action parameter (e.g., "apply" or "destroy")
    def action = params.action

    env.TF_DIR = 'Day-1-introduction'

    stage('Git Checkout') { 
        git branch: 'main', url: 'https://github.com/ijitendar/Terraform.git'
    }

    stage('Terraform Init') {
        dir(env.TF_DIR) {
            sh 'terraform init'
        }
    }

    stage('Terraform Plan') {
        dir(env.TF_DIR) {
            if (action == 'apply') {
                sh 'terraform plan'
            } else if (action == 'destroy') {
                sh 'terraform plan -destroy'
            } else {
                error "Invalid action: ${action}"
            }
        }
    }

    stage('Terraform Apply/Destroy') {
        dir(env.TF_DIR) {
            sh "terraform ${action} -auto-approve"
        }
    }
}
